<html>
  <head>
    <%= stylesheet_link_tag '_form', media: 'all', 'data-turbolinks-track' => true %>
    <%= form_for(@room) do |f| %>
  </head>
  <body>
    <% if @room.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>
  
        <ul>
        <% @room.errors.full_messages.each do |message| %>
          <center><%= message %></center>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="field">
      <%= f.text_field :name, placeholder: 'Nome'%>
    </div>
    
    <br>
    <div class="field">
      <%= f.text_field :players, placeholder: 'Número de Jogadores' %>
    </div>
    
    <br>
    
      <div class="field">
        <%= f.check_box :refreshauto %> Refresh Automatico 
        <%= f.check_box :bloqcartarepet %> Bloqueia Atualização de Carta
      </div>
      <br>
      
    <div class="w3-card-4" style="width: 50%; margin-left: 25.5%; background-color: #f1f1F1; ">
      <br>
      <div class="field">
        <div id="playersname" class="field">
          <%= f.text_area :playersname, disabled: true, placeholder: 'Selecione os jogadores abaixo', cols: 60, rows: 5, :id => 'textroom_playersname'%></div>
          <%= f.select(:selectuser, User.all.collect {|p| [ p.name ]})%>
          <button type="button" onclick="AddUsuarioSala()"><i class="fa fa-plus"></i></button>
          <button type="button" onclick="RemoveUsuarioSala()"><i class="fa fa-minus"></i></button>
      </div>
    </div>
  

  <p>
    <strong>Usuário Criador:</strong>
    <%= @room.user || 'Sem Usuário' %>
  </p>
    
    <br>
    <button type="submit" class="btn btn-success" onclick="AtivaCampo()">Salvar</button>
    <br>
    <br>
    <%= link_to 'Voltar', rooms_path %>
    <br>
    <br>
    <% end %>
  </body>
</html>