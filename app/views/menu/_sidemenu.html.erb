<html>
  <title>W3.CSS</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <%= stylesheet_link_tag    'menu', media: "all", "data-turbolinks-track" => false %>
  <body>


  
    <!-- Login Novo do Facebook -->
    <script>
    
        window.fbAsyncInit = function() {
          FB.init({
            appId      : '311017116012952',
            cookie     : true,
            xfbml      : true,
            version    : 'v2.6'
          });
        };
        
        function checkLoginState() {
          FB.getLoginStatus(function(response) {
            
            if (response.status === 'connected')
              {
                window.location = "https://techpoker.herokuapp.com/auth/facebook/callback";
              }
          });
        }
        
        (function(d, s, id){
           var js, fjs = d.getElementsByTagName(s)[0];
           if (d.getElementById(id)) {return;}
           js = d.createElement(s); js.id = id;
           js.src = "https://connect.facebook.net/en_US/sdk.js";
           fjs.parentNode.insertBefore(js, fjs);
         }(document, 'script', 'facebook-jssdk'));

        </script>

      <!-- Side Bar -->
      <div style="background-color: #022e4e;" class="w3-sidebar w3-bar-block w3-collapse w3-card-2" style="width:100px;" id="mySidebar">
        <button style="background-color: #022e4e;" class="w3-bar-item w3-button w3-hide-large" onclick="w3_close()"> <h4 style="color: white;"><i class="fa fa-times"></i> Fechar</h4> </button>
        <a class="w3-bar-item w3-button" href="/home"><i class="fa fa-home"></i> Home </a>

        <% if current_user == nil %>
          <div class="w3-dropdown-hover">
            <button class="w3-button"> <h2 style="color: white;"><i class="fa fa-sign-in"></i>    Login</h2></button>
              <div class="w3-dropdown-content w3-bar-block">
                <!-- Tag de Login inicial do Facebook... para futuros testes ...
                a><fb:login-button scope="public_profile,email" onlogin="checkLoginState();"></fb:login-button></a -->

                <a><fb:login-button scope="public_profile,email" onlogin="checkLoginState();" style="background-color: #3b5998; border: 1px solid #3b5998; padding: 14px 70px;"    ></fb:login-button></a>
                <a id="sign_ing"   href="/auth/google_oauth2"    class="w3-bar-item w3-button" style="border-radius: 0px; background-color:#cc0000;  "><i class="fa fa-google-plus"></i> Google</a> 
                <!-- a id="sign_infb"  onclick="checkLoginState();"  class="w3-bar-item w3-button" style="border-radius: 0px; background-color:#3B5998; font-size: 24px;  color:white;" scope="public_profile,email"> <i class="fa fa-facebook"></i> Facebook</a -->
                <a id="sign_infgh" href="/auth/github"           class="w3-bar-item w3-button" style="border-radius: 0px; background-color: gray;">  <i class="fa fa-github"></i> GitHub</a> 
                <a id="sign_inX"   href="/rooms"                 class="w3-bar-item w3-button" style="border-radius: 0px; background-color: blue;">  <i class="fa fa-user-circle"></i> Visitante</a>

              </div>
          </div>
        <% else %> 
            <a class="w3-bar-item w3-button" href="/rooms"><i class="fa fa-users" aria-hidden="true"></i> Salas </a>
            <a class="w3-bar-item w3-button" href="/signout"><i class="fa fa-sign-out"></i> Sair </a>
        <% end %>
            <a class="w3-bar-item w3-button" href="/help/index"><i class="fa fa-question"></i> Ajuda </a>
      </div>
        <!-- Barra Header -->
        <div style="background-color: #034f84 ; width: 100% ; "class="w3-container">
          <h1 style="color: white; ">
            <button style="float: left; background-color: #034f84 ;" class="w3-button w3-xlarge w3-hide-large" onclick="w3_open()">&#9776;</button>
            TechPoker
            <img border="2" src="/assets/icon.png" style="width: 50px; height: 50px; float: right;">
            
          </h1>

    <script>
    function w3_open() {
        document.getElementById("mySidebar").style.display = "block";
    }
    function w3_close() {
        document.getElementById("mySidebar").style.display = "none";
    }
    </script>
    
    </div>
  </body>
</html>