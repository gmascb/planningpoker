<html>
  <head>
    <%= stylesheet_link_tag '_form', media: 'all', 'data-turbolinks-track' => true %>
  </head>
  <body>
    <p id="notice"><% notice %></p>
    
    <% if @cartarepetida.to_i == 1 %>
      <script>
        $.notify("Você já tem uma carta cadastrada! :(","error");    
      </script>
    <% elsif notice == 'CartaOk' %>
      <script>
        $.notify("Sua carta foi registrada com sucesso! :)","success");    
      </script>
    <% end %>
    <br>
    
    
    <!--%= link_to image_tag("carta.jpg") + "0.5", pokers_create_path(:poker => {:value => 0.5 }), method: :post %-->
    
    <% carta05 = "card05.jpg" %>
    <% carta1 = "card1.jpg" %>
    <% carta2 = "card2.jpg" %>
    <% carta3 = "card3.jpg" %>
    <% carta5 = "card5.jpg" %>
    <% carta8 = "card8.jpg" %>
    <% carta13 = "card13.jpg" %>
    <% carta20 = "card20.jpg" %>
    <% carta40 = "card40.jpg" %>
    <% carta100 = "card100.jpg" %>
    <% cartaCoffee = "cardCoffee.jpg" %>
    <% cartaNEntendi = "cardNEntendi.jpg" %>
    
    <% if !current_user %>
      <% usuario = 'Sem Usuário' %>
    <% else %>
      <% usuario = current_user.name.to_s.force_encoding("UTF-8") %>
    <%end%>
    
    <div>
      <table border=0 width=200 height=200 col-span="1">
        <tr>
          <td align=center><%= link_to_image(carta05, pokers_create_path(:poker => {:value => 0.5, :user => usuario, :room => @salaAtual }, sala: @salaAtual) , method: :post)%></td>
          <td align=center><%= link_to_image(carta1, pokers_create_path(:poker => {:value => 1, :user => usuario, :room => @salaAtual} , sala: @salaAtual) , method: :post)%></td>
          <td align=center><%= link_to_image(carta2, pokers_create_path(:poker => {:value => 2, :user => usuario, :room => @salaAtual} , sala: @salaAtual) , method: :post)%></td>
          <td align=center><%= link_to_image(carta3, pokers_create_path(:poker => {:value => 3, :user => usuario, :room => @salaAtual} , sala: @salaAtual) , method: :post)%></td>
        </tr>
        <tr>
          <td align=center><%= link_to_image(carta5, pokers_create_path(:poker => {:value => 5, :user => usuario, :room => @salaAtual} , sala: @salaAtual) , method: :post)%></td>
          <td align=center><%= link_to_image(carta8, pokers_create_path(:poker => {:value => 8, :user => usuario, :room => @salaAtual} , sala: @salaAtual) , method: :post)%></td>
          <td align=center><%= link_to_image(carta13, pokers_create_path(:poker => {:value => 13, :user => usuario, :room => @salaAtual} , sala: @salaAtual) , method: :post)%></td>
          <td align=center><%= link_to_image(carta20, pokers_create_path(:poker => {:value => 20, :user => usuario, :room => @salaAtual} , sala: @salaAtual) , method: :post)%></td>
        </tr>
        <tr>
          <td align=center><%= link_to_image(carta40, pokers_create_path(:poker => {:value => 40, :user => usuario, :room => @salaAtual} , sala: @salaAtual) , method: :post)%></td>
          <td align=center><%= link_to_image(carta100, pokers_create_path(:poker => {:value => 100, :user => usuario, :room => @salaAtual} , sala: @salaAtual) , method: :post)%></td>
          <td align=center><%= link_to_image(cartaCoffee, pokers_create_path(:poker => {:name => 'Pausa', :user => usuario, :room => @salaAtual} , sala: @salaAtual) , method: :post)%></td>
          <td align=center><%= link_to_image(cartaNEntendi, pokers_create_path(:poker => {:name => 'Nao Entendi', :user => usuario, :room => @salaAtual} , sala: @salaAtual) , method: :post)%></td>
        </tr>
      </table>
    </div>
  </body>
</html>