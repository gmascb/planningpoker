<html>
  <head>
    <%= stylesheet_link_tag    'index', media: 'all', 'data-turbolinks-track' => true %>
  </head>
  <body>
    
    <h3> Sala '<%= @sala.name %>'</h3>
    <h4 id="notice"><%= notice %></h4>
    <% salaAtual = @sala.id %>

    <!--BotÃµes da Tela-->
    <%= link_to new_poker_path(sala: salaAtual), method: :get do %><i class="fa fa-hand-o-up"></i><% end %>
    <%= link_to pokers_path(sala: salaAtual), remote: true do %><i class="fa fa-refresh"></i><% end %>
    <%= link_to poker_path(:id => 1, :sala => salaAtual), :method => :delete, data: { confirm: 'Deseja Reiniciar?' }  do %><i class="fa fa-recycle"></i><% end %>
    
      
      <!-- Resultado -->
      <div id="resultadoCartas" ></div>

  </body>
</html>