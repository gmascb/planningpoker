<html>
  <head>
    <%= stylesheet_link_tag    'index', media: 'all', 'data-turbolinks-track' => true %>
  </head>
  <body>

    <h3> Sala '<%= @sala.name %>'</h3>
    
    <% if (@sala.refreshauto)%> <p style="font-size: 12px; color: green;">Refresh Automático</p> <% end %>
    
    <!--Botões da Tela-->
    <%= link_to new_poker_path(sala: @sala.id), method: :get, class: "waves-effect waves-light btn" do %>
      <i class="material-icons right">create</i> Jogar
    <% end %>
    
    <%= link_to pokers_path(sala: @sala.id), :id => "atualiza", remote: true, class: "waves-effect waves-light btn" do %>
      <i class="material-icons right">refresh</i>
    <% end %>

    <%= link_to poker_path(:id => 1, :sala => @sala.id), :method => :delete, class: "waves-effect waves-light btn" do %>
      <i class="material-icons right">delete</i>
    <% end %>
    
    <br/>

      <% if @sala.refreshauto %>
        <script>
        
        setInterval(function() {
          $(".atualiza").click();
            document.getElementById("atualiza").click();
        }, 1600);
        </script>
        
      <% end %>
      
      <!-- Resultado -->
      
      <center>
        <div id="resultadoCartas"></div>
      </center>
  </body>
</html>